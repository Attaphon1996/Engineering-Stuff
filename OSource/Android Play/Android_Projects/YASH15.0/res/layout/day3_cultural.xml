<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/texture" >

    <Button
        android:id="@+id/symphonica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SYMPHONICA"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    
    <Button
        android:id="@+id/ragarocker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAGA ROCKERS"
        android:layout_gravity="center"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/rodies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RODIES"
        android:layout_gravity="center"
        android:layout_marginTop="25dp" />
    
    <Button
        android:id="@+id/beatstreet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEATSTREET"
        android:layout_gravity="center"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/autocad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUTOCAD"
        android:layout_gravity="center"
        android:layout_marginTop="25dp" />
    
    <Button
        android:id="@+id/debate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEBATE"
        android:layout_gravity="center"
        android:layout_marginTop="25dp" />
    
    
</LinearLayout>
